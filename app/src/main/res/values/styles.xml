<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
    </style>

    <style name="Field" parent="AppTheme">
        <item name="android:textColor">@color/textOnPrimary</item>
        <item name="android:padding">32dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">46sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Field.TopStart">
        <item name="android:layout_marginEnd">@dimen/border_game_table</item>
        <item name="android:layout_marginBottom">@dimen/border_game_table</item>
    </style>

    <style name="Field.TopMiddle">
        <item name="android:layout_marginStart">@dimen/border_game_table</item>
        <item name="android:layout_marginEnd">@dimen/border_game_table</item>
        <item name="android:layout_marginBottom">@dimen/border_game_table</item>
    </style>

    <style name="Field.TopEnd">
        <item name="android:layout_marginStart">@dimen/border_game_table</item>
        <item name="android:layout_marginBottom">@dimen/border_game_table</item>
    </style>

    <style name="Field.MiddleStart">
        <item name="android:layout_marginTop">@dimen/border_game_table</item>
        <item name="android:layout_marginEnd">@dimen/border_game_table</item>
        <item name="android:layout_marginBottom">@dimen/border_game_table</item>
    </style>

    <style name="Field.Middle">
        <item name="android:layout_marginStart">@dimen/border_game_table</item>
        <item name="android:layout_marginTop">@dimen/border_game_table</item>
        <item name="android:layout_marginEnd">@dimen/border_game_table</item>
        <item name="android:layout_marginBottom">@dimen/border_game_table</item>
    </style>

    <style name="Field.BottomStart">
        <item name="android:layout_marginTop">@dimen/border_game_table</item>
        <item name="android:layout_marginEnd">@dimen/border_game_table</item>
    </style>

    <style name="Field.BottomMiddle">
        <item name="android:layout_marginStart">@dimen/border_game_table</item>
        <item name="android:layout_marginTop">@dimen/border_game_table</item>
        <item name="android:layout_marginEnd">@dimen/border_game_table</item>
    </style>

    <style name="Field.BottomEnd">
        <item name="android:layout_marginStart">@dimen/border_game_table</item>
        <item name="android:layout_marginTop">@dimen/border_game_table</item>
    </style>

    <style name="Field.MiddleEnd">
        <item name="android:layout_marginStart">@dimen/border_game_table</item>
        <item name="android:layout_marginTop">@dimen/border_game_table</item>
        <item name="android:layout_marginBottom">@dimen/border_game_table</item>
    </style>

    <style name="label_game_state">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">@color/textOnPrimary</item>
    </style>

</resources>
